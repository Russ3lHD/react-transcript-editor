{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "plugins": [
    "react",
    "css-modules"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "import/extensions": ["error", "ignorePackages"],
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off",
    "no-console": "warn",
    "no-debugger": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
